{
    "compilerOptions": {
      "declaration": true,
      "target": "es5",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "lib": [ "es7" ],
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/**/*"
    ]
  }